      overflow: hidden;
    }
    h3 {
      text-align: center;
      font-size: 16px;
      color: #1a535c;
      margin-bottom: 10px;
    }
    .select-wrapper {
      text-align: center;
      margin-bottom: 10px;
    }
    select {
      padding: 10px;
      font-size: 12px;
      border: 2px solid #1a535c;
      border-radius: 10px;
      background-color: #4ecdc4;
      color: #ffffff;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    select:hover {
      background-color: #1a535c;
    }
    table {
      width: 100%;
      border-collapse: collapse;
    }
    th, td {
      padding: 5px;
      text-align: center;
    }
    th:nth-child(1), td:nth-child(1) {
      width: 15%;
    }
    th:nth-child(4), td:nth-child(4) {
